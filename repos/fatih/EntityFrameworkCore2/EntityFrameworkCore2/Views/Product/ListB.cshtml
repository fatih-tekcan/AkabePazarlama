@model IEnumerable<Instructor>
@{
    ViewData["Title"] = "List";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <main class="container bg-light">
        <h2>Kursiyer Lİstesi</h2>
        <br />
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>İsim</th>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Kurs Adı</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item?.Name</td>
                        <td>@item?.City</td>
                        <td>@item.Course?.Price</td>
                        <td>@item.Course?.Name</td>
                        <td class=" "><a class="btn btn-success">Edit</a></td>
                        <td class=""><a class="btn btn-danger ">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>

    </main>
